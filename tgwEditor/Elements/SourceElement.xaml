<UserControl x:Class="tgwEditor.Elements.SourceElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" LayoutUpdated="UserControl_LayoutUpdated">
    <Button Style="{DynamicResource FlatButton}" x:Name="mainEl" Background="#FF000CFF" MouseEnter="mainEl_MouseEnter" MouseLeave="mainEl_MouseLeave" Click="mainEl_Click" BorderThickness="0"/>
</UserControl>
